
@{
    ViewData["Title"] = "PatientLayout";
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Clinic_MVC_UI</title>
    <script src="https://kit.fontawesome.com/bf21391385.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="//cdn.datatables.net/1.13.1/css/jquery.dataTables.min.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light font-weight-bold" style="background-color:#003399;">
            <div class="container-fluid">
                <a class="hm-logo-container" asp-controller="Patient" asp-action="Index">
                    <img class="hm-logo" alt="" style="height:120px; padding-bottom:20px" src="https://www.svgrepo.com/show/270145/health-clinic-health-care.svg" />
                    <h2 style="color:white;font-family:'Copperplate Gothic';display:inline-block;padding-top:30px;padding-left:10px">
                        <b>THE CARE</b>
                        <br /><span class="ms-2" style="font-size:15px;letter-spacing:6px"> -- C L I N I C --</span>
                    </h2>
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse" style="font-family:'Roboto',sans-serif;padding-left:20px;">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-uppercase" asp-area="" asp-controller="Patient" asp-action="BillHistory" style="font-size:large;color:white">Bills History</a>
                        </li>
                        &nbsp;&nbsp;&nbsp;
                        <li class="nav-item">
                            <a class="nav-link text-uppercase" asp-area="" asp-controller="Patient" asp-action="TreatmentHistory" style="font-size:large;color:white">Treatment History</a>
                        </li>
                        &nbsp;&nbsp;&nbsp;
                        <li class="nav-item">
                            <a class="nav-link text-uppercase" asp-area="" asp-controller="Patient" asp-action="SelectingDepartment" style="font-size:large;color:white">Take Appointment</a>
                        </li>
                        &nbsp;&nbsp;&nbsp;
                        <li class="nav-item">
                           @if(true){
                               int a=0;
                                <a class="nav-link text-uppercase" asp-area="" asp-controller="Patient" asp-action="Notification" style="font-size:large;color:white">
                                Notification
                                @if (true == true)
                                {
                                    a = Convert.ToInt32(TempData["Notification"]);
                                        TempData.Keep();
                                    }
                                    @if(a >0){<sup style="color:red" >@a</sup>
                                    }
                                    </a>
                               } 
                        </li>
                       
                        &nbsp;&nbsp;&nbsp;
                        <li class="nav-item">
                            <a class="nav-link text-uppercase" asp-area="" asp-controller="Patient" asp-action="PatientFeedback" style="font-size:large;color:white">Feedback</a>

                        </li>
                        @*&nbsp;&nbsp;&nbsp;
                        <li class="nav-item">
                            <a class="nav-link text-uppercase" asp-area="" asp-controller="Patient" asp-action="Profile" style="font-size:large;color:white">Profile</a>

                        </li>
                        &nbsp;&nbsp;&nbsp;
                        <li class="nav-item">
                            <a class="nav-link text-uppercase" asp-area="" asp-controller="Home" asp-action="Index" style="font-size:large;color:white">Logout</a>
                        </li>*@
                    </ul>
                </div>
                <div class="btn-group">
                    <a class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><img class="img-fluid" style="height:45px" src="https://www.svgrepo.com/show/209791/user-profile.svg"></a>
                    <div class="dropdown-menu dropdown-menu-right">
                        <a class="dropdown-item" asp-area="" asp-controller="Patient" asp-action="Profile"><img class="img-fluid" style="height:20px" src="https://www.svgrepo.com/show/318484/profile.svg">Profile</a>
                        <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Index" style="color:red"><img class="img-fluid" style="height:12px" src="https://www.svgrepo.com/show/79009/logout.svg"> Logout</a>
                    </div>
                </div>
            </div>
            
        </nav>
    </header>
    <div class="container-fluid" style="height:76vh">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted" style="background-color:#003399;position:fixed; bottom:0;">
        <div class="container">
            <a class="hm-logo-container" href="/">
                <img class="hm-logo" alt="" style="width:50px; height:50px;" src="https://www.svgrepo.com/show/270145/health-clinic-health-care.svg" />
                <h6 style="color:white; display:inline-block;">THE CARE</h6>
            </a>&nbsp;&nbsp;&nbsp;&copy; <a style="color:white;">2022 - The Care Clinic</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="//cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
