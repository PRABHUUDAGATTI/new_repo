@model ClinicEntity.Models.OtherStaff
@{
    ViewData["Title"] = "EditOtherStaff";
}
@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br/>
<a asp-area="" asp-controller="Admin" asp-action="GetAllOtherStaffs"><img class="img-fluid" style="height:35px" src="https://img.icons8.com/fluency/512/circled-left.png"></a>
<h2 style="color:#003399" class="font-weight-bolder text-uppercase" align="center">Edit Staff Details</h2>

<div style="background-color:#f0f8ff;padding:60px;font-family:'Roboto',sans-serif">
    <form method="post" enctype="multipart/form-data">
        <div class="col-4 d-inline-block align-top" style=" margin-right:50px;margin-left:270px">
            <div class="form-group">
                <label style="color:#003399;font-size:20px">Staff Id</label>
                <input  type="text" asp-for="StaffID" class="form-control" placeholder="Enter Staff Id" required />
            </div>
            <div class="form-group">
                <label style="color:#003399;font-size:20px">Staff Name</label>
                <input  type="text" asp-for="Name" class="form-control" placeholder="Enter Staff Name" />
                @Html.ValidationMessageFor(obj=>obj.Name)
            </div>
            <div class="form-group">
                <label style="color:#003399;font-size:20px">Phone Number</label>
                <input  type="text" asp-for="Phone" class="form-control" placeholder="Enter Phone Number" />
            </div>
            <div class="form-group">
                <label style="color:#003399;font-size:20px">Address</label>
                <input  type="text" asp-for="Address" class="form-control" placeholder="Enter Address" required />
            </div>
            <div class="form-group">
                <label style="color:#003399;font-size:20px">Designation</label>
                <input  type="text" asp-for="Designation" class="form-control" placeholder="Enter Designation" required />
            </div>
        </div>
        <div class="col-4 d-inline-block align-top">
            <div class="form-group">
                <label style="color:#003399;font-size:20px">Gender</label>
                <select  asp-for="Gender" asp-items="@ViewBag.genderlist" class="form-control" required></select>
            </div>
            <div class="form-group">
                <label style="color:#003399;font-size:20px">Date of Birth</label>
                <input  type="date" asp-for="BirthDate" class="form-control" placeholder="Enter DOB" required />
            </div>
            <div class="form-group">
                <label style="color:#003399;font-size:20px">Highest Qualification</label>
                <input  type="text" asp-for="Highest_Qualification" class="form-control" placeholder="Enter Highest Qualification" required />
            </div>
            <div class="form-group">
                <label style="color:#003399;font-size:20px">Salary</label>
                <input  type="number" step=0.01 asp-for="Salary" class="form-control" placeholder="Enter Salary" required />
            </div>
            <input type="submit" value="Update" onclick="editFunction()" class="btn btn-outline-success" />
            <input type="reset" value="Reset" class="btn btn-outline-secondary" />
    
            @if (ViewBag.status == "Ok")
            {
                    <br />

                    <br />
                <div class="alert alert-success">
                    @ViewBag.message
                </div>
            }
            else if (ViewBag.status == "Error")
            {
                    <br />

                    <br />
                <div class="alert alert-danger">
                    @ViewBag.message
                </div>
            }
        </div>
    </form>
</div>
