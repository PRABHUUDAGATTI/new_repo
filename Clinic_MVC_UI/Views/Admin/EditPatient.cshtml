<div>
    <hr />
    <a type="button" class="nav-link text-white btn btn-primary" asp-controller="Admin" asp-action="GetAllPatients">Return to Patient Tab</a>
    <hr />
</div>


<form method="post" enctype="multipart/form-data">
    <h2 align="center">Edit Patient Details</h2><hr />
    <div class="form-group">
        <label>Patient Id</label>
        <input type="text" asp-for="PatientID" class="form-control" placeholder="Enter Patient Id" required />
    </div>
    <div class="form-group">
        <label>Patient Name</label>
        <input type="text" asp-for="Name" class="form-control" placeholder="Enter Patient Name" required />
    </div>
    <div class="form-group">
        <label>Phone</label>
        <input type="text" asp-for="Phone" class="form-control" placeholder="Enter Phone Number" required />
    </div>
    <div class="form-group">
        <label>Address</label>
        <input type="text" asp-for="Address" class="form-control" placeholder="Enter Patient Address" required />
    </div>
    <div class="form-group">
        <label>Date of Birth</label>
        <input type="date" asp-for="BirthDate" class="form-control" placeholder="Enter DOB" required />
    </div>
    <div class="form-group">
        <label>Gender</label>
        <select asp-for="Gender" asp-items="@ViewBag.genderlist" class="form-control" required></select>
    </div>

    <input type="submit" value="Update" class="btn btn-outline-success" />
    <input type="button" value="Reset" class="btn btn-outline-secondary" />
    <hr />
    @if (ViewBag.status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message
        </div>
    }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>
    }
</form>