@{
    ViewData["Title"] = "Admin";
}
@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<script type="text/javascript">
    function preventBack() { window.history.forward(); }
    setTimeout("preventBack()", 10);
    window.onunload = function () { null };
</script>

<body style="background-color:#f0f8ff;font-family:'Roboto',sans-serif">
    <div class="container" >
        <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
                <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/img/doctor.svg" class="d-block w-100" alt="" height="735" width="735">
                    <div class="carousel-caption d-none d-md-block">
                        <b><a class="text-white" style="font-size:35px;">Doctor</a></b>
                        <p class="small fw-bold mt-2 pt-1 mb-0" style="font-size:20px">
                            <b>Click <a asp-controller="Admin" asp-action="GetAllDoctors">Here</a> to search Patient Details.</b>
                        </p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="~/img/patient.svg" class="d-block w-100" alt="" height="735" width="735">
                    <div class="carousel-caption d-none d-md-block">
                        <b><span class="text-white" style="font-size:35px;">Patient</span></b>
                        <p class="small fw-bold mt-2 pt-1 mb-0" style="font-size:20px">
                            <b>Click <a asp-controller="Admin" asp-action="GetAllPatients">Here</a> to search Patient Details.</b>
                        </p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="~/img/crowd.svg" class="d-block w-100" alt="" height="735" width="735">
                    <div class="carousel-caption d-none d-md-block">
                        <b><span class="text-white" style="font-size:35px;/*text-decoration:none*/">Other Staff</span></b>
                        <p class="small fw-bold mt-2 pt-1 mb-0" style="font-size:20px">
                            <b> Click <a asp-controller="Admin" asp-action="GetAllOtherStaffs">Here</a> to search Staff Details.</b>
                        </p>

                    </div>
                </div>
            </div>
            @*<button class="carousel-control-prev" type="button" data-target="#carouselExampleCaptions" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-target="#carouselExampleCaptions" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
            </button>*@
        </div>
    </div>
</body>
