<div>
    <hr />
    <a type="button" class="nav-link text-white btn btn-primary" asp-controller="Admin" asp-action="GetAllDoctors">Return to Doctor Tab</a>
    <hr />
</div>

<hr />

<form method="post" enctype="multipart/form-data">
    <h2 align="center">Edit Doctor Details</h2><hr />
    <div class="form-group">
        <label>Doctor Id</label>
        <input type="text" asp-for="DoctorID" class="form-control" placeholder="Enter Doctor Id" required />
    </div>
    <div class="form-group">
        <label>Doctor Name</label>
        <input type="text" asp-for="Name" class="form-control" placeholder="Enter Doctor Name" required />
    </div>
    <div class="form-group">
        <label>Phone</label>
        <input type="text" asp-for="Phone" class="form-control" placeholder="Enter Phone Number" required />
    </div>
    <div class="form-group">
        <label>Address</label>
        <input type="text" asp-for="Address" class="form-control" placeholder="Enter Doctor's Address" required />
    </div>
    <div class="form-group">
        <label>Date of Birth</label>
        <input type="date" asp-for="BirthDate" class="form-control" placeholder="Enter DOB" required />
    </div>
    <div class="form-group">
        <label>Gender</label>
        <select asp-for="Gender" asp-items="@ViewBag.genderlist" class="form-control" required></select>
    </div>
    <div class="form-group">
        <label>Department Name</label>
        <input type="text" asp-for="Department.DeptName" class="form-control" placeholder="Enter Department Name" required />
    </div>
    <div class="form-group">
        <label>Charger Per Visit</label>
        <input type="number" asp-for="Charges_Per_Visit" class="form-control" placeholder="Enter Fees" required />
    </div>
    <div class="form-group">
        <label>Monthly Salary</label>
        <input type="text" asp-for="MonthlySalary" class="form-control" placeholder="Enter Monthly Salary" required />
    </div>
    <div class="form-group">
        <label>Qualification</label>
        <input type="text" asp-for="Qualification" class="form-control" placeholder="Enter Doctor's Qualification" required />
    </div>
    <div class="form-group">
        <label>Specialization</label>
        <input type="text" asp-for="Specialization" class="form-control" placeholder="Enter Doctor's Specialization" required />
    </div>
     <div class="form-group">
        <label>Repute Index</label>
        <input type="text" asp-for="ReputeIndex" class="form-control" placeholder="Enter Repute Index" required />
    </div>
    <div class="form-group">
        <label>Patient Treated</label>
        <input type="text" asp-for="Patient_Treated" class="form-control" placeholder="Patients Treated" required />
    </div>
    <div class="form-group">
        <label>Work Experience</label>
        <input type="text" asp-for="Work_Experience" class="form-control" placeholder="Enter Work Experience" required />
    </div>
    <div class="form-group">
        <label>Status</label>
        <select asp-for="Status" asp-items="@ViewBag.doctorstatuslist" class="form-control" required></select>
    </div>

    <input type="submit" value="Update" class="btn btn-outline-success" />
    <input type="button" value="Reset" class="btn btn-outline-secondary" />
    <hr />
    @if (ViewBag.status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message
        </div>
    }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>
    }
</form>