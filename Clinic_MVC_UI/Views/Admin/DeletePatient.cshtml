<div>
    <hr />
    <a type="button" class="nav-link text-white btn btn-primary" asp-controller="Admin" asp-action="GetAllPatients">Return to Patient Tab</a>
    <hr />
</div>

<form method="post" enctype="multipart/form-data">
    <h2 align="center">Delete Patient Details</h2><hr />
    <div class="form-group">
        <label>Patient Id</label>
        <input type="text" asp-for="PatientID" class="form-control" placeholder="Enter Patient Id" required />
    </div>
    <input type="submit" value="Delete" class="btn btn-outline-danger" />
    <hr />
    @if (ViewBag.status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message
        </div>
    }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>
    }
</form>
