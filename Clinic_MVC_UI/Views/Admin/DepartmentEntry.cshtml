@model ClinicEntity.Models.Department
@{
    ViewData["Title"] = "DepartmentEntry";
}
@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="img-responsive" style=" background-image: url('https://images.rawpixel.com/image_1000/czNmcy1wcml2YXRlL3Jhd3BpeGVsX2ltYWdlcy93ZWJzaXRlX2NvbnRlbnQvbHIvdjg3MC1teW50LTIwXzFfMi5qcGc.jpg');padding:55px">
    <form method="post" enctype="multipart/form-data">
        <h2 style="color:#003399;font-family:'Copperplate Gothic'" class="font-weight-bolder text-uppercase" align="center">Department Entry</h2>
        <div class="form-group">
            <label class="font-weight-bold" style="color:#003399;font-family:'Copperplate Gothic';font-size:20px">Department Name</label>
            <input style="opacity:.8;" type="text" asp-for="DeptName" class="form-control" placeholder="Enter Department Name" />
        </div>
        <div class="form-group">
            <label class="font-weight-bold" style="color:#003399;font-family:'Copperplate Gothic';font-size:20px">Description</label>
            <input style="opacity:.8;" type="text" asp-for="Description" class="form-control" maxlength="500" placeholder="Describe Department" />
        </div>
        <input type="submit" value="Save" class="btn btn-outline-success" />
        <input type="reset" value="Reset" class="btn btn-outline-secondary" />

        @if (ViewBag.status == "Ok")
        {
            <br />

            <br />
            <div class="alert alert-warning">
                @ViewBag.message
            </div>
        }
        else if (ViewBag.status == "Error")
        {
            <br />

            <br />
            <div class="alert alert-danger">
                @ViewBag.message
            </div>
        }
    </form>
</div>




