@model ClinicEntity.Models.Department
@{
    ViewData["Title"] = "DeleteDepartment";
}
@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div style=" background-image: url('https://images.rawpixel.com/image_1000/czNmcy1wcml2YXRlL3Jhd3BpeGVsX2ltYWdlcy93ZWJzaXRlX2NvbnRlbnQvbHIvdjg3MC1teW50LTIwXzFfMi5qcGc.jpg');padding:55px">
    <form method="post" enctype="multipart/form-data">
        <h3 style="color:#003399;font-family:'Copperplate Gothic'" class="font-weight-bolder text-uppercase" align="center">Delete Department Details</h3>
        
        <div class="form-group">
            <label class="font-weight-bold" style="color:#003399;font-family:'Copperplate Gothic';font-size:20px">Department Id</label>
            <input style="opacity:.8;" type="text" asp-for="DeptNo" class="form-control" placeholder="Enter Department Id" style="opacity:0.8;" required />
        </div>
        <input type="submit" value="Delete" class="btn btn-outline-danger" />
        
        <div class="border-dark" style="border:solid,black, 2px">
            @if (ViewBag.status == "Ok")
            {
                <br />

                <br />
                <div class="alert alert-warning">
                    @ViewBag.message
                </div>
            }
            else if (ViewBag.status == "Error")
            {
                <br />

                <br />
                <div class="alert alert-danger">
                    @ViewBag.message
                </div>
            }
        </div>
    </form>
 </div>



