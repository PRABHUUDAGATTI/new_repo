@model IEnumerable<ClinicEntity.Models.Patient>

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@{
    ViewData["Title"] = "GetAllPatients";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width-device-width" />
</head>
<body>
    <br />
    <a asp-area="" asp-controller="Admin" asp-action="Index"><img class="img-fluid" style="height:35px" src="https://img.icons8.com/fluency/512/circled-left.png"></a>
    <br />
    <br />
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <a class="text-uppercase d-inline-block text-center" style="color:#003399;font-size:x-large" align="center"> Patient <span class="font-weight-bold" style="font-size:x-large">Details</span></a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="myTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Patient Id</th>
                            <th>Name</th>
                            <th>Phone</th>
                            <th>Address</th>
                            <th>BirthDate</th>
                            <th>Gender</th>
                            <th>Edit</th>
                            <th>Delete</th>
                            <th>View</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var patient in Model)
                    {
                        <tr>
                            <td>@patient.PatientID</td>
                            <td>@patient.Name</td>
                            <td>@patient.Phone</td>
                            <td>@patient.Address</td>
                            <td>@patient.BirthDate.ToShortDateString()</td>
                            <td>@patient.Gender</td>
                            <td align="center"><a class="btn btn-info" asp-controller="Admin" asp-action="EditPatient" asp-route-PatientId="@patient.PatientID"><i class="fa-sharp fa-solid fa-pen-to-square"></i></a></td>
                            <td align="center"><a class="btn btn-danger" asp-controller="Admin" asp-action="DeletePatient" onclick="deleteFunction()" asp-route-PatientId="@patient.PatientID"><i class="fa-sharp fa-solid fa-trash"></i></a></td>
                            <td align="center"><a class="btn btn-success" asp-controller="Admin" asp-action="PatientProfile" asp-route-patientProfileId="@patient.PatientID"><i class="fa-regular fa-eye"></i></a></td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>

