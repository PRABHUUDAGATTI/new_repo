@model ClinicEntity.Models.Department
@{
    ViewData["Title"] = "EditDepartment";
}

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br/>
<a asp-area="" asp-controller="Admin" asp-action="GetAllDepartments"><img class="img-fluid" style="height:35px" src="https://img.icons8.com/fluency/512/circled-left.png"></a>
<h2 style="color:#003399;font-family:'Roboto',sans-serif" class="font-weight-bolder text-uppercase" align="center">Edit Department Details</h2>

<div style="background-color:#f0f8ff;padding:55px;font-family:'Roboto',sans-serif">
    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label class="font-weight-bold" style="color:#003399;font-size:20px">Department Id</label>
            <input type="text" asp-for="DeptNo" class="form-control" placeholder="Enter Department Id" />
        </div>
        <div class="form-group">
            <label class="font-weight-bold" style="color:#003399;font-size:20px">Department Name</label>
            <input type="text" asp-for="DeptName" class="form-control" placeholder="Enter Department Name" />
            @Html.ValidationMessageFor(obj=>obj.DeptName)
        </div>
        <div class="form-group">
            <label class="font-weight-bold" style="color:#003399;font-size:20px">Description</label>
            <textarea type="text" asp-for="Description" class="form-control" maxlength="500" placeholder="Describe Department" style="height:220px"></textarea>
        </div>

        <input type="submit" onclick="editFunction()" value="Update" class="btn btn-outline-success" />
        <input type="reset" value="Reset" class="btn btn-outline-secondary" />
        
  
            @if (ViewBag.status == "Ok")
            {
                <br />

                <br />
                    <div class=" alert alert-success">
                        @ViewBag.message
                    </div>
            }
            else if (ViewBag.status == "Error")
            {
                <br />
                
                <br />
                <div class="alert alert-danger">
                    @ViewBag.message
                    </div>
            }
    </form>
</div>

