

@{
    Layout = "~/Views/Shared/DoctorLayout.cshtml";
}

@model IEnumerable<ClinicEntity.Models.Appointment>
@{
    ViewData["Title"] = "GetAllDoctors";
}


@if(Model.Count()>=1)
{
    <div class="col-12">
    <center><h3 style="font-size:x-large;color:black;font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif">List of Appointments</h3></center>
        <hr />
        <table class="table table-light table-bordered table-hover">
            <thead>
                <tr>
                    <th>Appointment ID</th>
                    <th>Patient Name</th>
                    <th>Patient Phone</th>
                    <th>Email Address</th>
                    <th>Appiontment Date</th>
                   <th>Appointment Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var doctor in Model)
                {
                        if (doctor.Appointment_Status == 0)
                        {
                        <tr>
                        <td>@doctor.AppointID</td>
                        <td>@doctor.Patient.Name</td>
                        <td>@doctor.Patient.Phone</td>
                        <td>@doctor.Patient.LoginTable.Email</td>
                        <td>@doctor.Date.ToShortDateString()</td>
                     
                        @if (doctor.Appointment_Status == 0)
                        {
                            <td>Requested</td>

                        }
                        else if (doctor.Appointment_Status == 1)
                        {
                            <td>Approved</td>
                        }
                        else if (doctor.Appointment_Status == 2)
                        {
                            <td>Pending</td>
                        }
                        else if (doctor.Appointment_Status == 3)
                        {
                            <td>Completed</td>
                        }
                        else if (doctor.Appointment_Status == 4)
                        {
                            <td>Rejected</td>
                        }
                      

                        <td><a asp-controller="Doctor" onclick="myfunction1()" class="btn btn-outline-success" asp-action="ApproveOrReject" asp-route-AppointmentId="@doctor.AppointID" asp-route-Appointment_Status=1>Approve </a></td>
                            <td><a asp-controller="Doctor" onclick="myfunction2()" class="btn btn-outline-danger" asp-action="ApproveOrReject" asp-route-AppointmentId="@doctor.AppointID" asp-route-Appointment_Status=4>Reject</a></td>
                    </tr>
                    }
                else if (doctor.Appointment_Status == 1 && doctor.Disease ==null && doctor.Prescription==null)
                {
                    <tr>

                        <td>@doctor.AppointID</td>
                        <td>@doctor.Patient.Name</td>
                        <td>@doctor.Patient.Phone</td>
                            <td>@doctor.Patient.LoginTable.Email</td>
                        <td>@doctor.Date.ToShortDateString()</td>
                       
                        @if (doctor.Appointment_Status == 0)
                        {
                            <td>Requested</td>

                        }
                        else if (doctor.Appointment_Status == 1)
                        {
                            <td>Approved</td>
                        }
                        else if (doctor.Appointment_Status == 2)
                        {
                            <td>Pending</td>
                        }
                        else if (doctor.Appointment_Status == 3)
                        {
                            <td>Completed</td>
                        }
                        else if (doctor.Appointment_Status == 4)
                        {
                            <td>Rejected</td>
                        }
                        

                        <td><a class="btn btn-outline-info" asp-controller="Doctor" asp-action="AddPrescription" asp-route-AppointmentId="@doctor.AppointID">Add Precscription</a></td>

                    </tr>
                }
                else if (doctor.Appointment_Status == 4)
                {
                    <tr>
                        <td>@doctor.AppointID</td>
                        <td>@doctor.Patient.Name</td>
                        <td>@doctor.Patient.Phone</td>
                        <td>@doctor.Patient.LoginTable.Email</td>
                        <td>@doctor.Date.ToShortDateString()</td>
                      
                        @if (doctor.Appointment_Status == 0)
                        {
                            <td>Requested</td>

                        }
                        else if (doctor.Appointment_Status == 1)
                        {
                            <td>Approved</td>
                        }
                        else if (doctor.Appointment_Status == 2)
                        {
                            <td>Pending</td>
                        }
                        else if (doctor.Appointment_Status == 3)
                        {
                            <td>Completed</td>
                        }
                        else if (doctor.Appointment_Status == 4)
                        {
                            <td>Rejected</td>
                        }
                       
                    </tr>
                }
                }
            </tbody>
        </table>
    </div>
<hr />
}else{
    <h2 class="h-100 d-flex align-items-center justify-content-center" style="color:#003399;font-family:Roboto,'sans-serif';padding-top:310px">There is no pending appointments</h2>
}
  
<script>
    function myfunction1(){
        alert("You Approved the request")
    }
    function myfunction2(){
        alert("You Rejecterd the request")
    }
</script>



