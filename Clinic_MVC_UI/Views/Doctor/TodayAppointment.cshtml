
@{
    ViewData["Title"] = "TodayAppointment";
}



@{
    ViewData["Title"] = "PendingAppointment";
}


@{
    Layout = "~/Views/Shared/DoctorLayout.cshtml";
}

@model IEnumerable<ClinicEntity.Models.Appointment>
@{
    ViewData["Title"] = "GetAllDoctors";
}


<div class="row">
    <div class="col-12">
       <h3 class="text-center" style="font-family:'Times New Roman', Times, serif;">List of Pending Appointments</h3>
        <hr />
        <table class="table-info table-bordered">
            <thead>

                <tr>
                    <th>Appointment ID</th>&nbsp;&nbsp;
                    <th>Patient_Name</th>&nbsp;&nbsp;
                    <th>Patient_Phone</th>&nbsp;&nbsp;
                    <th>Patient_BirthDate</th>&nbsp;&nbsp;
                    <th>Date</th>&nbsp;&nbsp;
                    <th>Progress</th>&nbsp;&nbsp;
                    <th>Appointment_Status</th>&nbsp;&nbsp;
                    <th>Bill_Amount</th>&nbsp;&nbsp;
                    <th> Bill_Status</th>&nbsp;&nbsp;

                </tr>
            </thead>
            <tbody>
                @foreach (var doctor in Model)
                {
                    <tr>
                        <td>@doctor.AppointID</td>&nbsp;&nbsp;
                        <td>@doctor.Patient.Name</td>&nbsp;&nbsp;
                        <td>@doctor.Patient.Phone</td>&nbsp;&nbsp;
                        <td>@doctor.Patient.BirthDate</td>&nbsp;&nbsp;
                        <td>@doctor.Date</td>&nbsp;&nbsp;
                        <td>@doctor.Progress</td>&nbsp;&nbsp;
                        <td>@doctor.Appointment_Status</td>&nbsp;&nbsp;
                        <td>@doctor.Bill_Amount</td>&nbsp;&nbsp;
                        <td>@doctor.Bill_Status</td>&nbsp;&nbsp;

                        <td><a class="btn btn-success" asp-controller="Doctor" asp-action="PendingAppointment" asp-route-Appointment_Status=1>Approve</a></td>
                        <td><a class="btn btn-danger" asp-controller="Admin" asp-action="DeleteDoctor" asp-route-Appointment_Status=4>Reject</a></td>
                    </tr>
                }
            </tbody>

        </table>
    </div>

</div>



