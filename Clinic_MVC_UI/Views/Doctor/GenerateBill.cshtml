@{
    Layout = "~/Views/Shared/DoctorLayout.cshtml";
}




@model ClinicEntity.Models.Appointment;

<div class="card">
    <div class="card-body">
        <div class="container mb-5 mt-3">
            <div class="row d-flex align-items-baseline">
                <div class="col-xl-9">
                    <p style="color: #7e8d9f;font-size: 20px;">Invoice >> <strong>ID: #123-123</strong></p>
                </div>
                <div class="col-xl-3 float-end">
                    <a class="btn btn-light text-capitalize border-0" data-mdb-ripple-color="dark">
                        <i class="fas fa-print text-primary"></i> Print
                    </a>
                    <a class="btn btn-light text-capitalize" data-mdb-ripple-color="dark">
                        <i class="far fa-file-pdf text-danger"></i> Export
                    </a>
                </div>
                <hr>
            </div>

            <div class="container">
                <div class="col-md-12">
                    <div class="text-center">
                        @*<i class="fab fa-mdb fa-4x ms-0" style="color:#5d9fc5 ;"></i>*@
                        <h3 class="text-center">TheCareClinic</h3>
                        <a href="#">TheCareClinic.com</a>
                    </div>

                </div>


                <div class="row">
                    <div class="col-xl-8">
                        <ul class="list-unstyled">
                            <li class="text-muted">To: <span style="color:#5d9fc5;">@Model.Patient.Name</span></li>
                            <li class="text-muted">@Model.Patient.Address</li>
                            <li class="text-muted">@Model.Patient.Gender</li>
                            <li class="text-muted"><i class="fas fa-phone"></i>@Model.Patient.Phone</li>
                        </ul>
                    </div>
                    <div class="col-xl-4">
                        <p class="text-muted">Invoice</p>
                        <ul class="list-unstyled">
                            <li class="text-muted">
                                <i class="fas fa-circle" style="color:#84B0CA ;"></i> <span class="fw-bold">ID:</span>@Model.PatientID
                            </li>
                            <li class="text-muted">
                                <i class="fas fa-circle" style="color:#84B0CA ;"></i> <span class="fw-bold">Creation Date: </span>@Model.Patient.BirthDate
                            </li>
                            <li class="text-muted">
                                <i class="fas fa-circle" style="color:#84B0CA ;"></i> <span class="me-1 fw-bold">Status:</span><span class="badge bg-warning text-black fw-bold">
                                    Unpaid
                                </span>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="row my-2 mx-1 justify-content-center">
                    <table class="table table-striped table-borderless">
                        <thead style="background-color:#84B0CA ;" class="text-white">
                            <tr>

                                <th scope="col">Appointment ID</th>
                                <th scope="col">Doctor_Name</th>
                                <th scope="col">Doctor_Phone</th>
                                <th scope="col">Doctor Charges per visit</th>
                                <th scope="col">Date</th>
                                <th scope="col">Progress</th>
                                <th scope="col">Appointment_Status</th>
                                <th scope="col">Bill_Amount</th>
                                <th scope="col"> Bill_Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td scope="row">@Model.AppointID</td>
                                <td scope="row">@Model.Doctor.Name</td>
                                <td scope="row">@Model.Doctor.Phone</td>
                                <td scope="row">@Model.Doctor.Charges_Per_Visit</td>
                                <td scope="row">@Model.Date</td>
                                <td scope="row">@Model.Progress</td>
                                @if (Model.Appointment_Status == 0)
                                {
                                    <td>Requsted</td>

                                }
                                else if (Model.Appointment_Status == 1)
                                {
                                    <td>Approved</td>
                                }
                                else if (Model.Appointment_Status == 2)
                                {
                                    <td>Pending</td>
                                }
                                else if (Model.Appointment_Status == 3)
                                {
                                    <td>Completed</td>
                                }
                                else if (Model.Appointment_Status == 4)
                                {
                                    <td>Rejected</td>
                                }

                                <td scope="row">@Model.Bill_Amount</td>
                                @if (Model.Bill_Status == 0)
                                {
                                    <td>Unpaid</td>


                                }
                                else if (Model.Bill_Status == 1)
                                {
                                    <td>Paid</td>
                                }
                                @*<td scope="row"><a class="btn btn-info" asp-controller="Patient" asp-action="UpdateBill" asp-route-AppointmentId="@Model.AppointID">Pay Bill</a></td>*@
                            </tr>

                        </tbody>

                    </table>
                </div>
                <div class="row">
                    @*<div class="col-xl-8">
                        <p class="ms-3">Add additional notes and payment information</p>

                    </div>*@
                    <div class="col-xl-3">
                        @*<ul class="list-unstyled">
                            <li class="text-muted ms-3"><span class="text-black me-4">SubTotal</span>$@Model.Doctor.Charges_Per_Visit</li>
                            <li class="text-muted ms-3 mt-2"><span class="text-black me-4">Tax(15%)</span>$111</li>
                        </ul>*@
                        <p class="text-black float-start">
                            <span class="text-black me-3"> Total Amount: </span><strong style="font-size: 15px;">Rs.&nbsp;@Model.Doctor.Charges_Per_Visit</strong>
                        </p>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-xl-10">
                        <p>Thank you for visting</p>
                    </div>
                    @*<div class="col-xl-2">
                    <button type="submit" class="btn btn-primary text-capitalize" asp-controller="Patient" asp-action="UpdateBill" asp-route-AppointmentId="@Model.AppointID"
                    style="background-color:#60bdf3 ;">
                    Pay Now
                    </button>
                    </div>*@
                </div>

            </div>
        </div>
    </div>
</div>


    
        
