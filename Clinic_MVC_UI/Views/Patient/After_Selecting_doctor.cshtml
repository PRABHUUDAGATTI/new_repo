
@{
    ViewData["Title"] = "After_Selecting_doctor";
}
@model ClinicEntity.Models.Doctor
@{
    Layout = "~/Views/Shared/PatientLayout.cshtml";
}

@if(Model == null)
{
    if (ViewBag.status == "Ok")
    {
        <body onload="myFunction()" class="alert alert-success">
            @ViewBag.message
            
        </body>
      
    }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>
    }
}else
{
<form method="post">
<section class="section about-section gray-bg" id="about">
    <div class="container">
        <div class="row align-items-center flex-row-reverse">
            <div class="col-lg-6">
                <div class="about-text go-to">
                    <h3 class="dark-color">About Me</h3>
                    <h6 class="theme-color lead">@Model.Specialization<span> @Model.Qualification</span></h6>
                    <p> @*<mark>design and develop</mark>*@ Department<mark> @Model.Department.DeptName</mark> @Model.Department.Description</p>
                    <div class="row about-list">
                        <div class="col-md-6">
                            <div class="media">
                                <label>Birthday :</label>
                                <p>@Model.BirthDate.ToShortDateString()</p>
                            </div>
                            <div class="media">
                                <label>Age</label>
                                <p>25</p>
                            </div>
                            <div class="media">
                                <label>Residence :</label>
                                <p>Residane</p>
                            </div>
                            <div class="media">
                                <label>Address :</label>
                                <p>@Model.Address</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="media">
                                <label>E-mail :</label>
                                <p>@Model.LoginTable.Email</p>
                            </div>
                            <div class="media">
                                <label>Phone :</label>
                                <p>@Model.Phone</p>
                            </div>
                            <div class="media">
                                <label>Skype :</label>
                                <p>skype.0404</p>
                            </div>
                            <div class="media">
                                <label>Freelance :</label>
                                <p>Available</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="about-avatar">
                    <img src="https://bootdey.com/img/Content/avatar/avatar7.png" title="" alt="">
                </div>
            </div>
        </div>
        <div class="counter">
            <div class="row">
                <div class="col-6 col-lg-3">
                    <div class="count-data text-center">
                        <h6 class="count h2" data-to="500" data-speed="500">@Model.Patient_Treated</h6>
                        <p class="m-0px font-w-600">Patient Treated</p>
                    </div>
                </div>
                <div class="col-6 col-lg-3">
                    <div class="count-data text-center">
                        <h6 class="count h2" data-to="150" data-speed="150">@Model.ReputeIndex</h6>
                        <p class="m-0px font-w-600">Reputed Index</p>
                    </div>
                </div>
                <div class="col-6 col-lg-3">
                    <div class="count-data text-center">
                        <h6 class="count h2" data-to="850" data-speed="850">@Model.Charges_Per_Visit</h6>
                        <p class="m-0px font-w-600">Charges Per Visit</p>
                    </div>
                </div>
                <div class="col-6 col-lg-3">
                    <div class="count-data text-center">
                        <h6 class="count h2" data-to="190" data-speed="190">@Model.Work_Experience</h6>
                        <p class="m-0px font-w-600">Work Experience</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <h6>Select the Appointment Date <span style="color:red;">*</span></h6>
            <input asp-for="BirthDate" style="width:250px;" type="date" class="form-control" placeholder="Select Date" required />
            <br />
            <div style="padding-left:250px;">
            <input type="submit" onclick="myFunction()" value="Make an Appointment" class="btn btn-outline-success" asp-route-DoctorIdd="@Model.DoctorID" />
                <input type="reset" value="Reset" class="btn btn-outline-secondary" />
            </div>
        </div>
    </div>

</section>
</form>
}
<script>
    function myFunction() {
        alert("Appointment requested");
    }
</script>
