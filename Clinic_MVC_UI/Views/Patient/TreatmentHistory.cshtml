@{
    ViewData["Title"] = "TreatmentHistory";
}

@{
    Layout = "~/Views/Shared/PatientLayout.cshtml";
}


@model IEnumerable<ClinicEntity.Models.Appointment>

@if (Model.Count() >= 1)
{

<div class="row">
    <div class="col-12">
        <center><h3 style="font-size:x-large;color:black;font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif">List of Pending Appointments</h3></center>
        <hr />
        <table class="table table-light table-bordered table-hover">
            <thead>
                <tr>
                    <th>Appointment ID</th>
                    <th>Doctor Name</th>
                    <th>Doctor Phone</th>
                    <th>Doctor Charges per visit</th>
                    <th>Date</th>
                    <th>Progress</th>
                    <th>Prescription</th>
                    <th>Appointment Status</th>
                    <th>Bill Amount</th>
                    <th>Bill Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var doctor in Model)
                {
                    if (doctor.Bill_Status == 1)
                    {
                        <tr>
                            <td>@doctor.AppointID</td>
                            <td>@doctor.Doctor.Name</td>
                            <td>@doctor.Doctor.Phone</td>
                            <td>@doctor.Doctor.Charges_Per_Visit</td>
                            <td>@doctor.Date</td>
                            <td>@doctor.Progress</td>
                            <td>@doctor.Prescription</td>
                            @if (doctor.Appointment_Status == 0)
                            {
                                <td>Requested</td>
                            }
                            else if (doctor.Appointment_Status == 1)
                            {
                                <td>Approved</td>
                            }
                            else if (doctor.Appointment_Status == 2)
                            {
                                <td>Pending</td>
                            }
                            else if (doctor.Appointment_Status == 3)
                            {
                                <td>Completed</td>
                            }
                            else if (doctor.Appointment_Status == 4)
                            {
                                <td>Rejected</td>
                            }

                            <td>@doctor.Bill_Amount</td>
                            @if (doctor.Bill_Status == 0)
                            {
                                <td>Unpaid</td>
                            }
                            else if (doctor.Bill_Status == 1)
                            {
                                <td>Paid</td>
                            }

                    </tr>
                }
                }
            </tbody>
        </table>
    </div>
</div>
<br />
}
else
{
    <h1 class="text-center" style="font-size:x-large;color:black;font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">You have not visited yet</h1>
}








