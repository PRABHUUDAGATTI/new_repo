
@model ClinicEntity.Models.Appointment
@{
    ViewData["Title"] = "PaymentMethod";
}

@{
    Layout = "~/Views/Shared/PatientLayout.cshtml";
}
<html>
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.0.3/css/font-awesome.css" />
</head>
<style>
    .inlineimage {
        margin-right: 8px;
        margin-left: 10px
    }

    .images {
        display: inline-block;
        max-width: 98%;
        height: auto;
        margin: 1%;
        left: 20px;
        gap:2rem;
        text-align: center
    }
</style>
<body>

    <div class="container" style="padding-top:85px">
        <div class="row">
            <div class="col-xs-12 col-md-6 col-md-offset-3">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="inlineimage" style="display:flex; justify-content:center;align-items:center">
                                <a href="https://phonepe.force.com/login">
                                    <img src="https://seeklogo.com/images/P/phonepe-logo-C4BD70AF79-seeklogo.com.png" alt=""  width="100" style="margin-right: 20px;margin-left:15px" class="img-fluid img-thumbnail shadow-sm">
                                </a>
                                <a href="https://pay.google.com/intl/en_in/about/">
                                    <img src="https://seeklogo.com/images/G/google-pay-logo-AA826E728D-seeklogo.com.png" alt="" width="80" style="margin-right: 20px;" class="img-fluid img-thumbnail shadow-sm">
                                </a>
                                <a href="https://paytm.com/login">
                                    <img src="https://seeklogo.com/images/P/paytm-logo-EC097E9287-seeklogo.com.png" alt=""  width="100" style="margin-right: 20px;" class="img-fluid img-thumbnail shadow-sm">
                                </a>
                                <a href="https://pay.amazon.com/">
                                    <img src="https://seeklogo.com/images/A/amazon-pay-logo-2C0A221ACA-seeklogo.com.png" alt="" width="150" style="margin-right: 20px;" class="img-fluid img-thumbnail shadow-sm">
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        <form role="form">
                            <div class="row">
                                <div class="col-xs-12">
                                    <div class="form-group">
                                        <label>CARD NUMBER</label>
                                        <div class="input-group"> <input type="tel" class="form-control" placeholder="Valid Card Number" required /> <span class="input-group-addon"><span class="fa fa-credit-card"></span></span> </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-7 col-md-7">
                                    <div class="form-group"> <label><span class="hidden-xs">EXPIRATION</span><span class="visible-xs-inline">EXP</span> DATE</label> <input type="tel" class="form-control" placeholder="MM / YY" required /> </div>
                                </div>
                                <div class="col-xs-5 col-md-5 pull-right">
                                    <div class="form-group"> <label>CVV CODE</label> <input type="tel" class="form-control" placeholder="CVV" required /> </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-12">
                                    <div class="form-group"> <label>CARD OWNER</label> <input type="text" class="form-control" placeholder="Card Owner Name" required/> </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="panel-footer">
                        <div class="row">
                            <div class="col-xs-12"> <a class="btn btn-success btn-lg btn-block" onclick="confirmPayment()" asp-controller="Patient" asp-action="UpdateBill" asp-route-AppointmentId="@Model.AppointID" style="background-color:#60bdf3;">Confirm Payment</a> </div>
                        </div>                       
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
</body>
</html>



